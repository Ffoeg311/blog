<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <!-- Navbar TODO move navbar to shared form thingy -->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href=<%= root_url %>>Coderon</a>
        </div>
        <div class="text-right" id="user-header-info">
          <!-- Admin stuff -->
          <% if user_signed_in? %>

            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Articles", articles_path %></li>
              
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span></span>
                  Logged in as <strong><%= current_user.email %></strong>.
                  <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to 'Edit profile', edit_user_registration_path %> </li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete%> </li>
                </ul>
              </li>
            </ul>
          <% else %>
          
          <% end %>
        </div>
      </div>
    </nav>

    <!-- App -->
    <div id="app-spacer-left" class="col-lg-2">
    </div>

    <div id="app-container" class="col-lg-6 container">
      <%= yield %>
    </div>
    
    <div id="app-spacer-right" class="col-lg-4">
    </div>

  </body>
</html>
