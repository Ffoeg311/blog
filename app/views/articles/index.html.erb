<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= raw article.content[0..500] %>...</td>
        <td><%= article.user.email %></td>
        <td><%= link_to 'View', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure you want to delete this article? This action cannot be undone.' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<%= will_paginate @articles, class:"text-center" %>
<br>

<%= link_to 'New Article', new_article_path %>
